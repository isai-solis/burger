<h1>Eat the Burger!</h1>

<ul>
    {{#each burgers}}
        {{#unless this.devoured}}
            <li> 
                {{this.burger_name}}
                    <form action="/{{this.id}}?_method=PUT" method = "POST">
                        <input type="hidden" name="devoured" value="true">
                        <button type="submit">DEVOUR!</button>
                    </form>

                {{> burgers/delete-burger}}
            </li>
        {{/unless}}
    {{/each}}
</ul>

<ul>
    {{#each burgers}}
        {{#if this.devoured}}
            <li> 
                {{this.burger_name}}
                    <form action="/{{this.id}}?_method=PUT" method = "POST">
                        <input type="hidden" name="devoured" value="false">
                    </form>

                {{> burgers/delete-burger}}
            </li>
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger!</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devour">You Hungry?</label><br>
    <input type="radio" name="devour" value="1" checked> Devoured!<br>
    <input type="radio" name="devour" value="0"> Not Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>